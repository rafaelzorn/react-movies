{
    "parser": "babel-eslint",
    
    "env": {
        "browser": true,
        "es6": true
    },

    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        
        "sourceType": "module"
    },

    "plugins": [
        "react"
    ],

    "rules": {
        "indent": [
            "error",
            4,
            {"SwitchCase": 1}
        ],

        "quotes": [
            "error",
            "single"
        ],

        "semi": [
            "error",
            "never"
        ]
    }
}